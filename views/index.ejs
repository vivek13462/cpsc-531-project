        <div align="center" id="modal_login" class="modal">
            <h3>Login</h3>
            <form action="/login" method="post">
                <div class="form-group">
                    <input placeholder="E-mail Address" type="text" class="form-control" name="email" id="email">
                </div>
                <div class="form-group">
                    <input placeholder="Password" type="password" class="form-control" name="password" id="password">
                </div>
                <br>
                <button type="submit" class="btn-large waves-effect waves-light orange" onclick="validate();">Login</button>
            </form>
        </div>
        <div align="center" id="modal_signup" class="modal">
            <h3>Sign Up</h3>
            <form action="/signup" method="post">
                <div class="form-group">
                    <input placeholder="First Name" type="text" class="form-control" name="fname">
                    <input placeholder="Last Name" type="text" class="form-control" name="lname">
                </div>
                <div class="form-group">
                    <input placeholder="E-mail Address" type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <input placeholder="Password" type="password" class="form-control" name="password">
                </div>
                <br>
                <button type="submit" class="btn-large waves-effect waves-light red">Signup</button>
            </form>
        </div>
